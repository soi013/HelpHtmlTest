<Window
   x:Class="HelpHtmlTest.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="clr-namespace:HelpHtmlTest"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   Title="Coockie Creater"
   Width="400"
   Height="350"
   TextBlock.FontSize="32"
   mc:Ignorable="d">
   <StackPanel Margin="10" HorizontalAlignment="Center">
      <TextBlock Text="Coockie Count" />
      <TextBlock x:Name="coockieCounter" Text="0" />
      <Button
         Background="Transparent"
         Click="Button_Click">
         <Border Background="SaddleBrown" CornerRadius="100">
            <TextBlock
               FontSize="72"
               Foreground="Black"
               Text="🍪" />
         </Border>
      </Button>

      <Button
         Margin="20"
         Click="Button_HelpClick"
         Content="HELP!" />
   </StackPanel>
</Window>
